CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
LDFLAGS=
.PHONY: all clean oclean fclean re
m.h = ok

all: $(OBJ)
ifeq ($(m.h), ok)
	$(CC) $(OBJ) -o $(NAME) $(LDFLAGS)

clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean 

re: oclean all
